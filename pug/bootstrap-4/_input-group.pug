//- Input group

mixin input-group
  .input-group
    span#basic-addon1.input-group-addon @
    input.form-control(placeholder='Username', aria-describedby='basic-addon1', type='text')
  br
  .input-group
    input.form-control(placeholder="Recipient's username", aria-describedby='basic-addon2', type='text')
    span#basic-addon2.input-group-addon @example.com
  br
  label(for='basic-url') Your vanity URL
  .input-group
    span#basic-addon3.input-group-addon https://example.com/users/
    input#basic-url.form-control(aria-describedby='basic-addon3', type='text')
  br
  .input-group
    span.input-group-addon $
    input.form-control(aria-label='Amount (to the nearest dollar)', type='text')
    span.input-group-addon .00
  br
  .input-group
    span.input-group-addon $
    span.input-group-addon 0.00
    input.form-control(aria-label='Amount (to the nearest dollar)', type='text')

mixin input-group-sizing
  .input-group.input-group-lg
    span#sizing-addon1.input-group-addon @
    input.form-control(placeholder='Username', aria-describedby='sizing-addon1', type='text')
  br
  .input-group
    span#sizing-addon2.input-group-addon @
    input.form-control(placeholder='Username', aria-describedby='sizing-addon2', type='text')

mixin input-button-addons
  .row
    .col-lg-6
      .input-group
        span.input-group-btn
          button.btn.btn-secondary(type='button') Go!
        input.form-control(placeholder='Search for...', type='text')
    .col-lg-6
      .input-group
        input.form-control(placeholder='Search for...', type='text')
        span.input-group-btn
          button.btn.btn-secondary(type='button') Go!
  br
  .row
    .col-lg-offset-3.col-lg-6
      .input-group
        span.input-group-btn
          button.btn.btn-secondary(type='button') Hate it
        input.form-control(placeholder='Product name', type='text')
        span.input-group-btn
          button.btn.btn-secondary(type='button') Love it

mixin input-button-addons-2
  .row
    .col-lg-6
      .input-group
        .input-group-btn
          button.btn.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            | Action
          .dropdown-menu
            a.dropdown-item(href='#') Action
            a.dropdown-item(href='#') Another action
            a.dropdown-item(href='#') Something else here
            .dropdown-divider(role='separator')
            a.dropdown-item(href='#') Separated link
        input.form-control(aria-label='Text input with dropdown button', type='text')
    .col-lg-6
      .input-group
        input.form-control(aria-label='Text input with dropdown button', type='text')
        .input-group-btn
          button.btn.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            | Action
          .dropdown-menu.dropdown-menu-right
            a.dropdown-item(href='#') Action
            a.dropdown-item(href='#') Another action
            a.dropdown-item(href='#') Something else here
            .dropdown-divider(role='separator')
            a.dropdown-item(href='#') Separated link
