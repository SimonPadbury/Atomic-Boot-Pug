mixin form-disabled-states
  form
    fieldset(disabled='')
      .form-group
        label(for='disabledTextInput') Disabled input
        input#disabledTextInput.form-control(placeholder='Disabled input', type='text')
      .form-group
        label(for='disabledSelect') Disabled select menu
        select#disabledSelect.form-control
          option Disabled select
      .checkbox
        label
          input(type='checkbox')
          |  Can't check this
      button.btn.btn-primary(type='submit') Submit

mixin form-sizing
  input.form-control.form-control-lg(placeholder='.form-control-lg', type='text')
  input.form-control(placeholder='Default input', type='text')
  input.form-control.form-control-sm(placeholder='.form-control-sm', type='text')

mixin form-sizing-2
  select.form-control.form-control-lg
    option Large select
  select.form-control
    option Default select
  select.form-control.form-control-sm
    option Small select

mixin form-column-sizing
  .row
    .col-2
      input.form-control(placeholder='.col-2', type='text')
    .col-3
      input.form-control(placeholder='.col-3', type='text')
    .col-4
      input.form-control(placeholder='.col-4', type='text')

mixin form-validation
  .form-group.has-success
    label.form-control-label(for='inputSuccess1') Input with success
    input#inputSuccess1.form-control.form-control-success(type='text')
    .form-control-feedback Success! You've done it.
    small.form-text.text-muted Example help text that remains unchanged.
  .form-group.has-warning
    label.form-control-label(for='inputWarning1') Input with warning
    input#inputWarning1.form-control.form-control-warning(type='text')
    .form-control-feedback Shucks, check the formatting of that and try again.
    small.form-text.text-muted Example help text that remains unchanged.
  .form-group.has-danger
    label.form-control-label(for='inputDanger1') Input with danger
    input#inputDanger1.form-control.form-control-danger(type='text')
    .form-control-feedback Sorry, that username's taken. Try another?
    small.form-text.text-muted Example help text that remains unchanged.

